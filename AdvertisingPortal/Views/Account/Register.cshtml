@model AdvertisingPortal.Models.RegisterUserModel
@{
    ViewBag.Title = "Tworzenie konta";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    <h4>Stwórz konto</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div style="width: 355px">
    <div class="form-group">
        <label>E-mail</label>
        @Html.TextBoxFor(m => m.registerInfo.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Hasło</label>
        @Html.PasswordFor(m => m.registerInfo.Password, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Powtórz hasło</label>
        @Html.PasswordFor(m => m.registerInfo.ConfirmPassword, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Imię</label>
        @Html.EditorFor(m => m.userInfo.FirstName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.userInfo.FirstName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Nazwisko</label>
            @Html.EditorFor(m => m.userInfo.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.userInfo.LastName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Numer telefonu</label>
            @Html.EditorFor(m => m.userInfo.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.userInfo.PhoneNumber, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Miasto</label>
            @Html.EditorFor(m => m.userInfo.City, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.userInfo.City, "", new { @class = "text-danger" })
     </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <p align="right"><input type="submit" class="btn btn-primary" value="Register" /></p>
        </div>
    </div>
        </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
