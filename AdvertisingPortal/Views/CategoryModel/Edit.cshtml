@model AdvertisingPortal.Models.CategoryModel

@{
    ViewBag.Title = "Edycja kategorii - " + Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "CategoryModel", FormMethod.Post)) {
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4>Edycja kategorii</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
        <div style="width: 350px">
            <div class="form-group">
                <label for="Name">Nazwa kategorii</label>
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Parent">Rodzic</label>
                @Html.DropDownListFor(m => m.Parent, (IEnumerable<SelectListItem>)ViewBag.categories, "Wybierz kategorię", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Parent, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <p align="right"><input type="submit" value="Zapisz" class="btn btn-primary" /></p>
                </div>
            </div>
        </div>
    </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
