@model AdvertisingPortal.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Zarządzanie kontem</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Hasło:</dt>
        <dd>
            
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Zmień hasło", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Stwórz hasło", "SetPassword")
            }
            
        </dd>
        <dt>
            Informacje o koncie:
        </dt>
        <dd>
            @Html.ActionLink("Zmień informacje", "AccountSettings", "UserModel")
        </dd>

    </dl>
</div>
